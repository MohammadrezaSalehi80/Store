</div>



@section Script
    {
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/sweetalert2/sweetalert2.min.js"></script>

    <script>
        function Register() {
            console.log("log");

            Swal.fire
                ({
                    icon: "success",
                    title: "ذخیره کاربر",
                    text: "آیا از ذخیره اطلاعات مطمئن هستید?",
                    showCancelButton: true,
                    confirmButtonColor: "#24e54e",
                    confirmButtonText: "ذخیره کاربر",
                    cancelButtonText: "بازگشت"
                }).then((result) => {

                    if (result.value) {
                        var Email = $('#email').val();
                        var Role = $('#role').val();
                        var FamilyName = $('#familyname').val();
                        var Name = $('#name').val();
                        var UserName = $('#username').val();
                        var Password = $('#password').val();

                        console.log(Email);

                        var postdData =
                        {
                            'email': Email,
                            'roleid': Role,
                            'familyname': FamilyName,
                            'name': Name,
                            'username': UserName,
                            'password': Password
                        };

                        console.log(postdData);

                        $.ajax({
                            type: "POST",
                            url: "Register",
                            data: postdData,
                            contentType: "application/x-www-form-urlencoded",
                            dataType: "json",
                            success: function (msg) {
                                if (msg.issuccess){
                                    swal.fire({
                                        title: msg.message,
                                        icon: "success"
                                    });
                                }
                                else{
                                    swal.fire({
                                        title: msg.message,
                                        icon: "error"
                                    });
                                }
                                location.reload();
                            }
                        });
                    }
                });
        }
    </script>

}


